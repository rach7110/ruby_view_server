
<%
def link_to(name, url, target)
  return "<a href='#{[url]}' target='#{[target]}'>#{name}</a>"
end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <a href="http://google.com" target="blank">Google</a>
      <%= link_to('This is a link to Google', 'http://google.com', 'blank')%>

    </p>
    <hr />
    <div>
      <form method='post' action="<%= @request.path %>">
    First name: <input type="text" name="first_name" placeholder='first name'/><br />
      <input type="submit" value="Submit" />
      </form>
      <%= @request.query.inspect %>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>